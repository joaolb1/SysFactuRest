<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    app:title="SYSFACTU"
    app:titleTextColor="#FFFFFF"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="SYSFACTU"
            android:text="SYSFACTU"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif-medium"
            app:titleTextColor="#FFFFFF"
            tools:text="SYSFACTU" />

        <ImageButton
            android:id="@+id/cambiarIp"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:onClick="cambiarIp"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:src="@drawable/icon_tools" />

        <ImageButton
            android:id="@+id/borrarCache"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="borrarCache"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_toStartOf="@+id/cambiarIp"
            android:layout_toLeftOf="@+id/cambiarIp"
            android:src="@drawable/ic_clean" />

        <ImageButton
            android:id="@+id/imprimir"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="imprimir"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_toStartOf="@+id/borrarCache"
            android:layout_toLeftOf="@+id/borrarCache"
            android:src="@drawable/ic_print" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_toStartOf="@+id/imprimir"
            android:layout_toLeftOf="@+id/imprimir"
            android:background="@null"
            android:onClick="home"
            android:src="@drawable/ic_home" />

 
    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>